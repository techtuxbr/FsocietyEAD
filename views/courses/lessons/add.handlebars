{{#each errors}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
	<h3>Nova aula</h3>
	<form action="/admin/courses/lesson/add" method="post">
		<input type="hidden" value="{{id}}" name="id">
        <div class="form-group">
			<label for="title">Título</label>
			<input type="text" class="form-control" name="title">
		</div>
		<div class="form-group">
			<label for="source">Vídeo Iframe</label>
			<textarea name="source" class="form-control"></textarea>
		</div>
		<div class="form-group">
			<label for="time">Tempo</label>
            <br>Minutos:
			    <input name="timeMinutes" type="number" class="form-control">
            Segundos:
                <input name="timeSeconds" type="number"class="form-control">
		</div>
		<button class="btn btn-primary" type="submit">Criar aula</button>
	</form>
</div>
