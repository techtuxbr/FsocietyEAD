{{#each errors}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
	<h3>Novo curso</h3>
	<form action="/admin/courses/edit" method="post">
		<input type="hidden" value="{{course._id}}" name="id">
        <div class="form-group">
			<label for="title">Título</label>
			<input type="text" class="form-control" name="title" required value="{{course.title}}">
		</div>
		<div class="form-group">
			<label for="slug">Slug</label>
			<input type="text" class="form-control" name="slug" required value="{{course.slug}}">
		</div>
		<div class="form-group">
			<label for="description">Descrição</label>
            <textarea name="description" class="form-control" id="description" required>{{course.description}}</textarea>
		</div>
		<div class="form-group">
			<label for="category">Categoria</label>
            <select class="custom-select" id="category" name="category" required>
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="null">Nenhuma categoria criada</option>
                {{/each}}
            </select> 
		</div>
		<div class="form-group">
			<label for="github">Repositório no Github</label>
			<input type="url" class="form-control" name="github" required value="{{course.github}}">
		</div>
		<div class="form-group">
			<label for="github">Thumbnail URL: </label>
			<input type="url" class="form-control" name="thumbnail" required value="{{course.thumbnail}}">
		</div>
		<button class="btn btn-primary" type="submit">Editar curso</button>
	</form>
</div>