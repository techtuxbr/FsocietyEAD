{{#each errors}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
	<h3>Novo curso</h3>
	<form action="/admin/courses/add" method="post">
		<div class="form-group">
			<label for="title">Título</label>
			<input type="text" class="form-control" name="title" required value="{{title}}">
		</div>
		<div class="form-group">
			<label for="slug">Slug</label>
			<input type="text" class="form-control" name="slug" required value="{{slug}}">
		</div>
		<div class="form-group">
			<label for="description">Descrição</label>
            <textarea name="description" class="form-control" id="description" required>{{description}}</textarea>
		</div>
		<div class="form-group">
			<label for="category">Categoria</label>
            <select class="custom-select" id="category" name="category" required>
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="null">Nenhuma categoria criada</option>
                {{/each}}
            </select> 
		</div>
		<div class="form-group">
			<label for="author">Autores: </label>
            <select class="custom-select" id="author" name="author" required>
                {{#each authors}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="null">Nenhum autor registrado</option>
                {{/each}}
            </select> 
		</div>
		<div class="form-group">
			<label for="github">Repositório no Github</label>
			<input type="url" class="form-control" name="github" required value="{{github}}">
		</div>
		<div class="form-group">
			<label for="github">Thumbnail URL: </label>
			<input type="url" class="form-control" name="thumbnail" required value="{{thumbnail}}">
		</div>
		<button class="btn btn-primary" type="submit">Criar curso</button>
	</form>
</div>