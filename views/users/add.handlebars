{{#each errors}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
	<h3>Novo usuário</h3>
	<form action="/admin/users/add" method="post">
		<div class="form-group">
			<label for="name">Nome</label>
			<input type="text" class="form-control" name="name" required value="{{name}}">
		</div>
		<div class="form-group">
			<label for="surname">Sobrenome</label>
			<input type="text" class="form-control" name="surname" required value="{{surname}}">
		</div>
		<div class="form-group">
			<label for="email">Email: </label>
			<input type="email" class="form-control" name="email" required value="{{email}}">
		</div>
		<div class="form-group">
			<label for="password">Senha: </label>
			<input type="password" class="form-control" name="password" required value="{{name}}">
		</div>
		<div class="form-group">
			<label for="password2">Repita a Senha: </label>
			<input type="password" class="form-control" name="password2" required value="{{name}}">
		</div>
		<div class="form-group">
			<label for="role">Tipo: </label>
            <select name="role" id="role" class="custom-select" required>
                <option value="0">Usuário</option>
                <option value="1">Moderador</option>
                <option value="2">Autor</option>
                <option value="3">Admin</option>
            </select>
		</div>
		<button class="btn btn-primary" type="submit">Criar usuário</button>
	</form>
</div>